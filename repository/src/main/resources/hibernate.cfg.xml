<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <!-- a SessionFactory instance listed as /jndi/name -->
    <session-factory>

        <!-- properties -->
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/test</property>
        <property name="connection.username">icourseadmin</property>
        <property name="connection.password">admin</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">none</property>
        <property name="current_session_context_class">thread</property>
        <property name="connection.pool_size">100</property>
        <property name="hibernate.dbcp.initialSize">10</property>
        <property name="hibernate.dbcp.maxTotal">100</property>
        <property name="hibernate.dbcp.maxIdle">10</property>
        <property name="hibernate.dbcp.minIdle">10</property>
        <property name="hibernate.dbcp.maxWaitMillis">-1</property>
        <!-- Anti Pattern -->
        <property name="hibernate.enable_lazy_load_no_trans">true</property>

        <!-- mapping files -->
<!--        <mapping resource="Role.hbm.xml"/>-->
<!--        <mapping resource="Trainer.hbm.xml"/>-->
<!--        <mapping resource="Student.hbm.xml"/>-->
<!--        <mapping resource="Class.hbm.xml"/>-->
<!--        <mapping resource="Theme.hbm.xml"/>-->
<!--        <mapping resource="Mark.hbm.xml"/>-->
<!--        <mapping resource="Salary.hbm.xml"/>-->

        <mapping class="by.itacademy.mikhalevich.icourse.model.Trainer"/>
        <mapping class="by.itacademy.mikhalevich.icourse.model.Role"/>
        <mapping class="by.itacademy.mikhalevich.icourse.model.Salary"/>

        <mapping class="by.itacademy.mikhalevich.icourse.model.Student"/>
        <mapping class="by.itacademy.mikhalevich.icourse.model.Mark"/>
        <mapping class="by.itacademy.mikhalevich.icourse.model.Group"/>
        <mapping class="by.itacademy.mikhalevich.icourse.model.Theme"/>

    </session-factory>

</hibernate-configuration>