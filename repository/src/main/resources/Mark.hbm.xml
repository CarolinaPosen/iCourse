<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "by.itacademy.mikhalevich.icourse.model.Mark" table = "mark">

        <id name = "id" type = "int">
            <column name="id"/>
            <generator class="identity"/>
        </id>

        <property name="mark" column="mark"/>
        <property name="date" column="date"/>

<!--        <many-to-one name="student" class="by.itacademy.mikhalevich.icourse.model.Student"-->
<!--                     column="student_id"-->
<!--                     cascade="all" />-->

        <many-to-one name="theme" class="by.itacademy.mikhalevich.icourse.model.Theme"
                     column="theme_id"
                     cascade="all" />

    </class>
</hibernate-mapping>