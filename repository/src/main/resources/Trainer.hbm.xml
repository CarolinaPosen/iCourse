<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "by.itacademy.mikhalevich.icourse.model.Trainer" table = "teacher">

        <id name = "id" type = "int">
            <column name="id"/>
            <generator class="identity"/>
        </id>

        <property name="name" column="name"/>
        <property name="login" column="login"/>
        <property name="password" column="password"/>

        <many-to-one name="role" class="by.itacademy.mikhalevich.icourse.model.Role"
                     column="role_id"
                     cascade="all" />

        <set name="salaries" cascade="all">
            <key column="teacher_id" not-null="false"/>
            <one-to-many class="by.itacademy.mikhalevich.icourse.model.Salary"/>
        </set>



    </class>
</hibernate-mapping>